{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-east-2",
    "vpc_id": "vpc-f6013d9f",
    "subnet_id": "subnet-6254dc2f",
    "source_ami_filter": {
      "filters": {
      "virtualization-type": "hvm",
      "name": "ubuntu/images/hvm-ssd/ubuntu-xenial-16.04-amd64-server-*",
      "root-device-type": "ebs"
      },
      "owners": ["099720109477"],
      "most_recent": true
    },
    "instance_type": "t2.micro",
    "ssh_username": "ubuntu",
    "ami_name": "TT-BastionHost {{timestamp}}"
  }]
},
  "provisioners": [{
    "type": "shell",
    "inline": [
      "sleep 30",
      "sudo apt-get update && sudo apt-get upgrade",
      "sudo apt install zip unzip -y",
      "cd ~",
      "wget https://releases.hashicorp.com/terraform/0.10.7/terraform_0.10.7_linux_amd64.zip",
      "wget https://releases.hashicorp.com/packer/1.1.0/packer_1.1.0_linux_amd64.zip",
      "unzip terraform_0.10.7_linux_amd64.zip",
      "unzip packer_1.1.0_linux_amd64.zip",
      "sudo mv terraform /bin/",
      "sudo mv packer /bin/",
      "git clone https://github.com/pyralix/Terraform.git",

    ]
    }]
